<div class="header sticky-top">
  <div class="container">
    <div class="left">
      <%= link_to "アモリル", root_path, class: "logo" %>
    </div>
    <div class="right d-md-block d-none">
      <div class="normal-links">
        <%= render 'layouts/right_links', dropdown_item: false %>
      </div>
    </div>
    <div class="right dropdown d-md-none">
      <a class="dropdown-toggle d-md-none" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        メニュー<span><%= show_messages_count %></span>
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
        <%= render 'layouts/right_links', dropdown_item: true %>
      </div>
    </div>
  </div>
</div>
