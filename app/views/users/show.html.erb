<div class="main-contents col-md-8">
  <div class="card">
    <div class="card-header">
      <div>
        <%= image_tag @user.image if @user.image.attached? %>
      </div>
      <h3><%= @user.name %></h3>
    </div>
    <div class="card-body">
      <% if text = @user.self_introduction.presence %>
        <p><%= safe_join(text.split("\n"), tag(:br)) %><p>
      <% else %>
        <p>自己紹介が未入力です。</p>
      <% end %>
    </div>
    <div class="card-footer">
      <% if @user == current_user %>
        <%= link_to "プロフィール編集はこちら", edit_user_registration_path %>
      <% else %>
        <%= link_to "メッセージを送る", new_message_path(receiver_id: @user.id) %>
      <% end %>
    </div>
  </div>
</div>
